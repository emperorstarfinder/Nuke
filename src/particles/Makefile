########################################################
#					EXECUTABLE NAME 				   #
########################################################

EXE 			:= particleTests

########################################################
#					SOURCES							   #
########################################################

SOURCES			:= Particles.hpp ParticlePolicies.hpp \
					ParticleTests.cpp 

########################################################
#					COMPILERS						   #
########################################################

CXX				:= g++

########################################################
#				INCLUDE DIRECTORIES 				   #
########################################################

INCLUDES 		:= -I/usr/include

########################################################
#					LIBRARIES 						   #
########################################################

LIBS 			:= -lgtest -lgtest_main -lpthread \
					-lGL -lGLU -lglut -lm -lGLEW

LIB_DIR 		:= -L/usr/lib

########################################################
#					COMPILER FLAGS 					   #
########################################################

CXX_FLAGS 		:= -std=c++11 -g

########################################################
# 					TARGET RULES 					   #
########################################################

.PHONY: all tests

all: tests 

tests: $(EXE)

$(EXE) :
	$(CXX) $(CXX_FLAGS) $(SOURCES) -o $(EXE) $(LIBS)

clean:
	rm -rf *.o
	rm -rf $(EXE) 

